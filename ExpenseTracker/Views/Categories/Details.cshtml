@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class=" breadcrumb-section">
    <div class="container text-center">
        <h1 class="display-4">Details of @Model.CategoryName</h1>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card card rounded shadow-lg">
            <div class="card-header shadow">
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" asp-controller="Categories" class="btn btn-info btn-sm rounded shadow-sm">
                        <i class="fa fa-backward"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <dl class="row text-center mt-4">
                    <dt class="col-4">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>
                    <dd class="col-8">
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.CategoryId" class="btn btn-success shadow btn-sm w-25"><i class="fa fa-pencil"></i> Edit</a>
            </div>
        </div>

    </div>
</div>
