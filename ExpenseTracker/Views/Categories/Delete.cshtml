@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h3 class="alert alert-warning">Are you sure you want to delete @Model.CategoryName?</h3>
<div class="row">
    <div class="col">
        <dl class="row border">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </dl>

        <form asp-action="Delete" asp-controller="Categories">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</button>
            <a asp-action="Index" asp-controller="Categories" class="btn btn-info btn-sm"><i class="fa fa-backward"></i> Back to List</a>
        </form>
    </div>
</div>

